@using CustomerManagementSystem.DTO;
@model Customer

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    var isFemale = Model.Gender == "Female";
}

<div>
    <button id="btnSaveCustomer">Save</button>
    <button id="btnDeleteCustomer" class="d-none">Delete</button>
    <button id="btnArchiveCustomer" class="d-none">Archive</button>
    <button id="btnPrint" class="d-none">Print</button>
</div>

@Html.Hidden("hdCustomerId", Model.CustomerId)

<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstName">First name</label>
            <input type="text" class="form-control" id="firstName" value="@Model.Firstname" placeholder="First name">
        </div>
        <div class="form-group col-md-6">
            <label for="lastName">Last name</label>
            <input type="text" class="form-control" id="lastName" value="@Model.Lastname" placeholder="Last name">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" value="@Model.Address" placeholder="Address">
        </div>
        <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" value="@Model.Email" placeholder="Email">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="contact">Contact number</label>
            <input type="text" class="form-control" id="contact" value="@Model.Contact" placeholder="Contact number">
        </div>
        <div class="form-group col-md-6">
            <label for="lastName">Gender</label>
            <select class="form-control" id="gender">
                <option>Male</option>
                <option selected="@isFemale">Female</option>
            </select>
        </div>

    </div>
</form>

<div class="d-none" id="printCustomerDetail">
    <h2>CMS</h2>
    <h3>Customer detail</h3>
    <div>
        <table>
            <tr>
                <td>Full name</td>
                <td>@Model.Fullname</td>
            </tr>
            <tr>
                <td>Address</td>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Contact</td>
                <td>@Model.Contact</td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>@Model.Gender</td>
            </tr>
        </table>
    </div>
</div>

<script src="~/Scripts/Customers.js"></script>
<script>
    $(document).ready(function () {
        var customer = '@Model.CustomerId';
        if (customer && customer != '00000000-0000-0000-0000-000000000000') {
            $('#btnDeleteCustomer').removeClass('d-none');
            $('#btnArchiveCustomer').removeClass('d-none');
            $('#btnPrint').removeClass('d-none');
        }
    });
</script>