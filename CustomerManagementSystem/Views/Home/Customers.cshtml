@using CustomerManagementSystem.Domain;
@model List<Customer>

<div>
    <h2>Customers</h2>
    <button id="addCustomer">Add</button>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Email</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
            </tr>
        }
    </table>
</div>

<script src="~/Scripts/Customers.js"></script>
